<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cardio_entry_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/cardio_records"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/your_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/your_time" />

    <TextView
        android:id="@+id/cardio_time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="Large Text"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/your_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/your_distance" />

    <TextView
        android:id="@+id/cardio_dist_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="Large Text"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/cardio_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/notes" />

    <LinearLayout
        android:id="@+id/add_cardio_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cardio_note_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/add_cardio_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_note" />

</LinearLayout>